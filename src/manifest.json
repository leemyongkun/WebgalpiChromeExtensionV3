{
  "name": "my-extension",
  "description": "A Vue.js web extension",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "HIGHLIGHT",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background/background.js",
      "background/listener.js",
      "background/contextMenu.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_idle",
      "matches": ["*://*/*"],
      "css": ["css/hl.css", "lib/jcrop/jcrop.css"],
      "js": ["contents/listener.js", "contents/core/hl-core.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "<all_urls>",
    "*://apis.google.com/*",
    "tabs",
    "storage",
    "contextMenus",
    "cookies",
    "bookmarks",
    "webNavigation",
    "management",
    "notifications",
    "alarms",
    { "fileSystem": ["write", "retainEntries", "directory"] }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

  "web_accessible_resources": []
}
