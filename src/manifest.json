{
  "name": "my-extension",
  "description": "A Vue.js web extension",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "HIGHLIGHT",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js", "background/listener.js"]
  },
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_idle",
      "matches": ["*://*/*"],
      "css": ["css/hl.css", "lib/jcrop/jcrop.css"],
      "js": ["contents/listener.js", "contents/core/hl-core.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "contextMenus",
    "cookies",
    "bookmarks",
    "webNavigation",
    "management",
    "notifications",
    "alarms"
  ],
  "web_accessible_resources": [
    "fonts/element-icons.ttf",
    "fonts/element-icons.woff"
  ]
}
